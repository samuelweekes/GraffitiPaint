    <%include ../partials/header%>
    <div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>BearlyBlogging</h1>
        <p>Brown Eyed Bear Blogs</p>
        <p>
             <a class= "btn btn-primary btn btn-lg" href="/paints/new">Add New Blog</a>
        </p>
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% paints.forEach(function(paint) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= paint.image %>">
                <div class="caption">
                    <h4><%= paint.name %></h4>
                </div>
            </div>
            <p>
                <a href="/paints/<%= paint._id %>" class="btn btn-primary">Read Blog</a>
            </p>
        </div>
    <% });%>
        </div>
    </div>


    <%include ../partials/footer%>
